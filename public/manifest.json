{
  "manifest_version": 3,
  "name": "FormAI",
  "version": "1.0.0",
  "description": "A Chrome extension that fill job application form using AI",
  "icons": {
    "16": "icons/extension.png",
    "48": "icons/extension.png",
    "128": "icons/extension.png"
  },
  "action": {
    "default_popup": "src/popup/index.html",
    "default_icon": {
      "16": "icons/extension.png",
      "48": "icons/extension.png",
      "128": "icons/extension.png"
    }
  },
  "background": {
    "service_worker": "background/index.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/index.js"]
    }
  ],
  "options_page": "src/options/index.html",
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self';"
  },
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": []
}

